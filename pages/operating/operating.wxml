<!--pages/operating/operating.wxml-->
<view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">智能球阀</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">操作记录</view>
</view>

<swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
<!-- tab切换智能球阀 -->
    <swiper-item class='swiperLeft'>
      <view class='left'>
      <!-- 某某某正在操作 -->
          <view class='popup'>
            <text class='popupCon'>李四正在操作,剩余时间{{item.clock}}</text>
            <image class='phone' src='./image/u102.png' style='width:24rpx;height:24rpx'></image>
          </view>

        <view class='mbody'>
          <!-- 单个水阀 -->
          <block wx:for="{{obj}}" wx:key="unique">
            <view class='branch'>
              <view class='branchBody'>
              <!-- 左边节点 -->
                <image class='branchA' data-index="{{index}}" data-text="{{item.num[0].list}}" catchtap="switchA" wx:if="{{item.num[0].ischecked}}" src="./image/aguan61.png" style='width:120rpx;height:60rpx'></image>
                <image class='branchA' data-index="{{index}}" data-text="{{item.num[0].list}}" catchtap="switchA" wx:else  src="./image/akai65.png" style='width:120rpx;height:60rpx'></image>
                <!-- 右边节点 -->
                <image class='branchB' data-index="{{index}}" data-text="{{item.num[1].list}}" catchtap='switchB' wx:if="{{item.num[1].ischecked}}" src="./image/bguan63.png" style='width:120rpx;height:60rpx'></image>
                <image class='branchB' data-index="{{index}}" data-text="{{item.num[1].list}}" catchtap='switchB' wx:else src="./image/bkai67.png" style='width:120rpx;height:60rpx'></image>
                <view class='branchC'></view>
              </view>
              <text class='describe'>{{item.item[0].nameA}}A{{item.item[1].nameB}}B</text>
            </view>
          </block>
        </view>
        <!-- 设置开阀时间 -->
        <view class='set'>
          <text class='setCon'>开阀时间结束后，水阀自动关闭</text>
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view class="time">{{array[index]}}分钟</view>
          </picker>  
        </view>
        <!-- 开阀按钮 -->
        <button bindtap='actioncnt'>开阀</button>
        <!-- 跳转常用阀页面 -->
        <view class='common' bindtap='waterValve'>常用球阀管理</view>
      </view>
    </swiper-item>
    <!-- tab操作记录部分 -->
    <swiper-item class="swiperRight">
    <!-- 每条列表 -->
    <block wx:for="{{daily}}" wx:key="key">
      <view class='list'>
      <!-- 开关阀时间统计 -->
        <view class='count'>
          <view>开阀时间：{{item.start}}</view>
          <view>关阀时间：{{item.end}}</view>
        </view>
        <!-- 开关阀图示 -->
        <view class="chart">
        <!-- 图示里面的列表 --> 

          <view class='li' wx:for="{{item.item}}" wx:for-item="every" wx:key="index">
            <text decode='true' class='name'>&lt;{{every.nameA}}A{{every.nameB}}B&gt;</text>
            <view class='open'>
               <image src="./image/aguan172.png" class='openLeft' style='width:40rpx;height:20rpx'></image>
               <image src="./image/bguan174.png" class='openRight' style='width:40rpx;height:20rpx'></image>
               <view class='openXia'></view>
            </view>
          </view>
         
        </view>
      </view>
    </block>
    </swiper-item>
</swiper>
<import src="../template/template.wxml" />
<template is="tabBar" data="{{tabBar: tabBar}}" />


