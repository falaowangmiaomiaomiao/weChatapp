/* pages/resetPassword/resetPassword.wxss */
page {
  height: 100%;
}
.container {
  box-sizing: border-box;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #5490fe;
  z-index: 1000
}
.status-bar {
  background: #5490fe;
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  color:#fff;
  font-size: 36rpx;
  font-weight: 600;
}
.title-bar .back-btn, .title-bar .tablet {
  width: 116px; /* 保持一致使标题居中 */
}
.title-bar .tablet { /* 可优化 */
  /* box-sizing: border-box; */
  /* padding-left: 1em; */
}
.return{
  margin: 60rpx 0 34rpx 0; 
  display: block;
  width: 80rpx;
  height: 80rpx;
}
.returnP{
  display: block;
  margin:20rpx 0 0 28rpx;
  width: 20rpx;
  height:30rpx;
}
.body{
  width: 100%;
  height:86%;
}
form{
  width: 100%;
  height: 400rpx;
}
.row{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #f1f1f1;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: right;
  background: #FBFCFF;
}
.old,.new,.reset{
  width: 40%;
  text-align: left;
  margin-left: 28rpx;
}
input{
  width: auto;
  height:100rpx;
  display: block;
  font-size: 28rpx;
  margin-right: 50rpx;
}
button{
  color: #fff;
  background: #5490Fe;
  width: 95%;
  margin-top: 20rpx;
}