<!--pages/resetPassword/resetPassword.wxml-->
<view class='navigationTitle'>
  <view class='zuhe'>
    <image class='return' src="image/left.png" bindtap='return'></image>
    <view class='title'>修改密码</view>  
  </view>
</view>
<view class='dian'></view>
<view class='body'>
  <form bindsubmit='formSubmit'>
  <!-- 旧密码 -->
    <view class='row'>
      <view class='old'>旧密码</view>
      <input name="old" placeholder='请输入旧密码'></input>
    </view>
    <!-- 新密码 -->
    <view class='row'>
      <view class='new'>新密码</view>
      <input name="new" placeholder='请设置新密码'></input>
    </view>
    <!-- 确认密码 -->
    <view class='row'>
      <view class='reset'>确认密码</view>
      <input name="reset" placeholder='请再次输入新密码'></input>
    </view>
    <button form-type='formSubmit'>提交</button>
  </form>
</view>
