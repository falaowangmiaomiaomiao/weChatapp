page {
  height: 100%;
}
.container {
  box-sizing: border-box;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #5490fe;
}
.status-bar {
  background: #5490fe;
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  color:#fff;
  font-size: 36rpx;
  font-weight: 600;
}
.title-bar .back-btn, .title-bar .tablet {
  width: 116px; /* 保持一致使标题居中 */
}
.title-bar .tablet { /* 可优化 */
  /* box-sizing: border-box; */
  /* padding-left: 1em; */
}
.head{
  width: 100%;
  height:318rpx;
  position: relative;
}
.bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left:0;
}
.describe{
  width: 100%;
  height: 100%;
  color:#fff;
  font-size: 46rpx;
  position: absolute;
  left:0;
  top:0;
