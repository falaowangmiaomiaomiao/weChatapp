<!--logs.wxml-->
<view class="container" style="padding-top:{{statusBarHeight+titleBarHeight}}px">
  <view class="header">
    <view class="status-bar" style="height:{{statusBarHeight}}px"></view>
    <view class="title-bar" style="height:{{titleBarHeight}}px">
      <view class="back-btn"></view>
      <view>大禹智慧灌区</view>
      <view class="tablet"></view>
    </view>
  </view>
</view>
<view class='head'>
  <image class="bg" src='./image/logbg.png'></image>
  <view class='describe'>科尔沁区智慧灌区操作平台</view>
  <image class='triangle' src='./image/triangle.png'></image>
</view>
<form bindsubmit="formSubmit">
  <view class="login">
    <label>
      <image class="user" src='./image/login.png'></image>
      <input placeholder-class='place-holder' class='name' placeholder='请输入您的登录账号' bindchange='inputName' name="name"></input>
    </label>
  </view>
  <view class='password'>
    <label>
      <image class='passwordP' src='./image/password.png'></image>
      <input placeholder='请输入登录密码' placeholder-class='place-holder' class='name' bindchange='inputPassword' name='password'></input>
    </label>
  </view>
  <button form-type="submit">登录</button>
</form>
