<view class='top'>
  <view class='navigationTitle'>首页</view>
  <view class='dian'></view>
</view>
<view class='bgP'>
  <image class='bg' src='{{url}}'></image>
  <view class="position">
    <view class='quality'>
      <view class='flag {{flag}}'></view>
      <text class='condition'>{{condition}} {{pm}}</text>
    </view>
    <view class='pos-auto'>
      <image class='pos' src="./image/pos.png"></image>
      <text class='accuracy'>{{currentCity}}</text>
    </view>
  </view>
  <view class='topview'>
 <!--当前天气状况-->
    <view class="detailInfo">{{weatherDesc}}</view>
    <!--当前温度-->
    <view class="degree">{{date}}°</view>
    <text class='temperature'>温度 {{temperature}}</text>
  </view>
</view>
<!-- 明天和后天的天气状况 -->
<view class="bottomview">
  <view class='leftview'>
    <view class="box">
      <view class='column'>
        <view class='item day'>明天</view>
        <view class='item du'>{{originalData[1].temperature}}</view>
      </view>
      <view class='column'>
        <view class='item shikuang'>{{originalData[1].weather}}</view>
        <image class='item pic' src="{{urlIcon1}}"></image>
      </view>
    </view>    
  </view> 
  <view class="rightview">
    <view class="box">
      <view class='column'>
        <view class='item day'>后天</view>
        <view class='item du'>{{originalData[2].temperature}}</view>
      </view>
      <view class='column'>
        <view class='item shikuang'>{{originalData[2].weather}}</view>
        <image class='item pic' src="{{urlIcon2}}"></image>
      </view>
    </view>
  </view> 
</view>
<!-- 灌区参数 -->
<view class='irrigate'>
  <view class='title'>
    <view class='sign'></view>
    <text class='param'>灌区参数</text>
  </view>
  <view class='block'>
    <view class="swiper-tab">
      <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="swichNav">降雨趋势</view>
      <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="swichNav">蒸发量趋势</view>
      <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="swichNav">光照趋势</view>
      <view class="swiper-tab-item {{currentTab==3?'active':''}} end" data-current="3" bindtap="swichNav">温度趋势</view>
    </view>
    <swiper current="{{currentTab}}" class="swiper-box" duration="300"  bindchange="bindChanges">
    <!-- 降雨趋势 -->
      <swiper-item>
        <view class="containers">
          <view class="unit">降雨量/mm</view>
          <view class='boxs'>
            <canvas canvas-id="lineCanvas"  id="canvas1" bindtouchstart="plot1"></canvas>
          </view>
        </view>
      </swiper-item>
    <!-- 蒸发量趋势 -->
      <swiper-item>
        <view class="containers">
          <view class="unit">蒸发量/kg</view>
          <view class='boxs'>
            <canvas canvas-id="lineCanvas1" id="canvas2" bindtouchstart="plot2">
            </canvas>
          </view>
        </view>
      </swiper-item>
    <!-- 光照趋势 -->
      <swiper-item>
        <view class="containers">
          <view class="unit">光照度/lux</view>
          <view class='boxs'>
            <canvas canvas-id="lineCanvas2" id="canvas3" bindtouchstart="plot3"></canvas>
          </view>
        </view>>
      </swiper-item>
      <!-- 温度趋势 -->
      <swiper-item>
        <view class="containers">
          <view class="unit">温度/℃</view>
          <view class='boxs'>
            <canvas canvas-id="lineCanvas3" id="canvas4" bindtouchstart="plot4"></canvas>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>
</view>
