<view class='navigationTitle'>首页</view>
<view class='dian'></view>
<view class='bgP'>
  <view class="position">
    <view class='quality'>
      <view class='flag'></view>
      <text class='condition'>优 47</text>
    </view>
    <view class='pos-auto'>
      <image class='pos' src="../index/image/pos.png"></image>
      <text class='accuracy'>{{city}} {{district}}</text>
    </view>
  </view>
  <view class='topview'>
 <!--当前天气状况-->
    <view class="detailInfo">暴雨</view>
    <!--当前温度-->
    <view class="degree">30°</view>
    <text class='temperature'>温度 31-38℃</text>
  </view>
</view>
<!-- 明天和后天的天气状况 -->
<view class="bottomview">
  <view class='leftview'>
    <view class="box">
      <view class='column'>
        <view class='item day'>明天</view>
        <view class='item du'>33/25℃</view>
      </view>
      <view class='column'>
        <view class='item shikuang'>多云</view>
        <image class='item pic' src="../index/image/qing.png"></image>
      </view>
    </view>    
  </view> 
  <view class="rightview">
    <view class="box">
      <view class='column'>
        <view class='item day'>后天</view>
        <view class='item du'>32/24℃</view>
      </view>
      <view class='column'>
        <view class='item shikuang'>多云转阵雨</view>
        <image class='item pic' src="../index/image/zhenyu.png"></image>
      </view>
    </view>
  </view> 
</view>
<!-- 灌区参数 -->
<view class='irrigate'>
  <view class='title'>
    <view class='sign'></view>
    <text class='param'>灌区参数</text>
  </view>
  <view class='block'>
    <view class="swiper-tab">
      <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="swichNav">降雨趋势</view>
      <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="swichNav">蒸发量趋势</view>
      <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="swichNav">光照趋势</view>
      <view class="swiper-tab-item {{currentTab==3?'active':''}} end" data-current="3" bindtap="swichNav">温度趋势</view>
    </view>
    <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
    <!-- 降雨趋势 -->
      <swiper-item>
        <view class="containers">
          <view class="unit">降雨量/mm</view>
          <canvas canvas-id="lineCanvas" disable-scroll="true" id="canvas1" bindtouchstart="plot1"></canvas>
        </view>
      </swiper-item>
    <!-- 蒸发量趋势 -->
      <swiper-item>
        <view class="containers">
          <view class="unit">蒸发量/kg</view>
          <canvas canvas-id="lineCanvas1" disable-scroll="true" id="canvas2" bindtouchstart="plot2"></canvas>
        </view>
      </swiper-item>
    <!-- 光照趋势 -->
      <swiper-item>
        <view class="containers">
          <view class="unit">光照度/lux</view>
          <canvas canvas-id="lineCanvas2" disable-scroll="true" id="canvas3" bindtouchstart="plot3"></canvas>
        </view>>
      </swiper-item>
      <!-- 温度趋势 -->
      <swiper-item>
        <view class="containers">
          <view class="unit">温度/℃</view>
          <canvas canvas-id="lineCanvas3" disable-scroll="true" id="canvas4" bindtouchstart="plot4"></canvas>
        </view>
      </swiper-item>
    </swiper>
  </view>
</view>
<!-- tab栏 -->
<import src="../template/template.wxml" />
<template is="tabBar" data="{{tabBar: tabBar}}" />