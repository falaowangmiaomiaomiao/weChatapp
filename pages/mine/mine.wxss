/* pages/mine/mine.wxss */
page {
  width: 100%;
  height: 100%;
  background: #f8faff;
}
.container {
  box-sizing: border-box;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #5490fe;
}
.status-bar {
  background: #5490fe;
}
.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  color:#fff;
  font-size: 36rpx;
  font-weight: 600;
}
.title-bar .back-btn, .title-bar .tablet {
  width: 116px; /* 保持一致使标题居中 */
}
.title-bar .tablet { /* 可优化 */
  /* box-sizing: border-box; */
  /* padding-left: 1em; */
}
.headers{
  width: 100%;
  height:280rpx;
  background: #5490FE;
  /* overflow: hidden; */
  position: relative;
}
.cloud1{
  width: 750rpx;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  left:0;
}
.cloud2{
  width: 750rpx;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  left:0;
}
.head{
  width: 174rpx;
  height:174rpx;
  border-radius: 50%;
  background: #669cfe;
  border:26rpx solid #5993fe;
  margin: auto;
}
.photo{
  border-radius: 50%;
  background:rgba(0,0,0,0); 
  border:6rpx solid #fff;
  margin:18rpx auto; 
  height: 130rpx;
  width: 130rpx;
}
.icon{
  display: block;
  overflow: hidden;
  height: 130rpx;
  width: 130rpx;
  clip-path: circle(66rpx at center);
}
.name{
  width: 100%;
  display: block;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  position: absolute;
  bottom: 34rpx;
}
.main{
  width: 100%;
  height: auto;
}
.column{
  width: 100%;
  height: 110rpx;
  border-bottom: 2rpx solid #f1f1f1;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  background: #fff;
  font-size: 32rpx;
}
.left{
  margin-left: 28rpx;
}
.right{
  display: block;
  width: 74%;
  text-align: right;
  margin-right: 30rpx;
  color:#D0D0D0;
  font-size: 28rpx;
}
.lan{
  color: #5490fe;
}