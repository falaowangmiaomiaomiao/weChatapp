/* pages/mine/mine.wxss */
.header{
  width: 100%;
  height:300rpx;
  background: #5490FE;
  overflow: hidden;
  position: relative;
}
.head{
  width: 200rpx;
  height:200rpx;
  border-radius: 50%;
  background: #fff;
  border:2rpx solid #fff;
  margin: 50rpx 0 0 50rpx;
  display: inline-block;
}
.name{
  display: inline-block;
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left:300rpx;
  top: 100rpx;
}
.main{
  width: 100%;
  height: 900rpx;
  background: #F9FAFF;
}
.column{
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #D0D0D0;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  background: #fff;
  font-size: 30rpx;
}
.left{
  margin-left: 50rpx;
}
.right{
  margin-right: 30rpx;
  color:#D0D0D0;
}